{
  "name": "@plq/use-persisted-state",
  "version": "1.3.0",
  "description": "useState hook with persistence in storage",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "/src",
    "/lib",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "jest --verbose",
    "test:watch": "npm test -- --watchAll",
    "lint": "eslint ./src/**/*.ts",
    "release": "dotenv release-it",
    "demo": "vite demo",
    "demo:build": "vite build demo",
    "demo:preview": "vite preview demo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Akurganow/use-persisted-state.git"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm test",
        "npm run build"
      ],
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "keywords": [
    "react",
    "hook",
    "storage",
    "local-storage",
    "session-storage",
    "persistence",
    "persist",
    "sync"
  ],
  "author": "Alex Kurganov <me@akurganow.ru>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/Akurganow/use-persisted-state/issues"
  },
  "homepage": "https://github.com/Akurganow/use-persisted-state#readme",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "0.1.1",
    "@types/firefox-webext-browser": "^120.0.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "conventional-changelog-cli": "^5.0.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-localstorage-mock": "^2.4.6",
    "jest-webextension-mock": "^4.0.0",
    "process": "^0.11.10",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "release-it": "^19.0.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^7.0.6"
  },
  "peerDependencies": {
    "react": ">=16.8.0 || >=18.0.0 || >=19.0.0",
    "react-dom": ">=16.8.0 || >=18.0.0 || >=19.0.0"
  },
  "dependencies": {
    "@plq/is": "^1.2.0"
  }
}
